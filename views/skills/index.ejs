<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="stylesheets/style.css">
    <title>Developer Skills</title>
  </head>
  <body class="skills-page">
    <h1>Skills as of <%= time %> </h1>
    <% if(error) { %>
    <h2><%= error %></h2>
    <% } %>
    <ul>
      <% skills.forEach(function(skill) { %>
        <input type="checkbox" class="skillsCheckbox">
        <li> 
      <a href="/skills/<%= skill._id %> "><%= skill.text %></a> </li> 
      <span><%= skill.done ? 'learned' : 'not learned yet' %> </span>  
      
      <% }) %>
    </ul>
  </ul>
  <p>Click here to add a new skill to the list.</p>
  <a href="/skills/new" class="addBtn">ADD NEW SKILL</a>

  </body>
</html>